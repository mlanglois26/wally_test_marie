<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new flat</h3>
          <%= simple_form_for @flat do |f| %>
            <%= f.input :name %>
            <%= f.input :price_per_night %>
            <%= f.input :city %>
            <%= f.submit class: 'btn btn-flat' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
